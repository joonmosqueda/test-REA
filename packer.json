{
  "variables": {
    "base_ami": "ami-54140237",
    "build_version": "1.0.0",
    "instance_type": "t2.micro",
    "environment": "dev",
    "vpc_id": "vpc-82cfffe6",
    "subnet_id": "subnet-470eca20",
    "iam_profile": "HIPBaseInstanceProfile",
    "application_id": "dfp_jenkins"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "ami",
      "region": "ap-southeast-2",
      "ssh_pty": "true",
      "iam_instance_profile": "{{user `iam_profile`}}",
      "source_ami": "{{user `base_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "ssh_username": "ec2-user",
      "ami_name": "jenkins-dfp-build-{{user `build_version`}}",
      "tags": {
        "Owner": "DFP",
        "Name": "dfp_jenkins",
        "TechnicalService": "Jenkins",
        "ApplicationID": "{{user `application_id`}}",
        "CostCentre": "V_DFP",
        "Environment": "nonprod"
      },
      "run_tags": {
        "Owner": "DFP",
        "Name": "dfp_jenkins_packer",
        "TechnicalService": "Jenkins - AMI build",
        "ApplicationID": "{{user `application_id`}}",
        "CostCentre": "V_DFP",
        "Environment": "nonprod"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "config",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "scripts",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "./scripts/packer/provision.sh",
      "execute_command": "sudo -E '{{ .Path }}'"
    }
  ]
}